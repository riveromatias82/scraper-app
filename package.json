{
  "name": "scraper-app",
  "version": "1.0.0",
  "description": "A web scraping application with user authentication and link extraction",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon --exec ts-node -r tsconfig-paths/register server/index.ts",
    "server:build": "tsc",
    "server:start": "node dist/index.js",
    "server:prod": "npm run server:build && npm run server:start",
    "client:dev": "cd client && npm start",
    "build": "npm run server:build && cd client && npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:init-db": "node init-db.js",
    "test:setup": "npm run test:init-db && npm test",
    "test:run": "node run-tests.js",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "db:seed": "node server/scripts/seed.js",
    "type-check": "tsc --noEmit",
    "lint": "eslint server/**/*.ts",
    "lint:fix": "eslint server/**/*.ts --fix"
  },
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "axios": "^1.6.2",
    "bcryptjs": "^3.0.2",
    "bullmq": "^5.0.0",
    "cheerio": "^1.0.0-rc.12",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "prisma": "^5.7.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/express-validator": "^3.0.2",
    "@types/ioredis": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.2.1",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2"
  },
  "keywords": [
    "web-scraping",
    "react",
    "nodejs",
    "express",
    "prisma",
    "sqlite",
    "bullmq",
    "redis"
  ],
  "author": "Your Name",
  "license": "MIT"
}
